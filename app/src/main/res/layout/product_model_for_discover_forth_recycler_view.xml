<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/product_model_for_discover_forth_recycler_view_img"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:background="@drawable/product_model_for_discover_forth_recycler_view_img"
        app:srcCompat="@drawable/cocoa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/product_model_for_discover_forth_recycler_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="serif"
            android:text="Title"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_model_for_discover_forth_recycler_view_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:text="has an energy and power"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>